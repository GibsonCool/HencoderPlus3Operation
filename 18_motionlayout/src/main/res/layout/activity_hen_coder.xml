<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                      xmlns:tools="http://schemas.android.com/tools"
                                                      xmlns:app="http://schemas.android.com/apk/res-auto"
                                                      android:layout_width="match_parent"
                                                      android:layout_height="match_parent"
                                                      android:id="@+id/hencoderRoot"
                                                      app:layoutDescription="@xml/hencoder"
                                                      tools:context=".HenCoderActivity">


    <TextView
            android:id="@+id/h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H"
            android:textSize="24sp"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E"
            android:textSize="24sp"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N"
            android:textSize="24sp"
            android:textStyle="bold" />

    <Button
            android:id="@+id/bt_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="toggle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/showDebug"
            app:layout_constraintBottom_toBottomOf="parent" />

    <Button
            android:id="@+id/showDebug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="showDebug"
            app:layout_constraintStart_toEndOf="@id/bt_toggle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.motion.widget.MotionLayout>